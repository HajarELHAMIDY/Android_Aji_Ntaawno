<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AproposNous">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="171dp"
                android:layout_height="195dp"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/aji_ntaawno_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="22dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:src="@drawable/gmail" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="134dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:text="ajntaawno@gmail.com" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="13dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:src="@drawable/face" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:text="AjiNtaawno Officiel" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="1dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:text="0644375190" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="5dp"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_business" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_weight="1"
                        android:text="ENSET Mohamedia" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:text="C'est quoi  &quot;Aji Ntaawno&quot; ?"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/desc_app"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="&quot;Aji Ntaawno&quot;     est      une        application mobile réalisée par   un groupe des élèves ingénieur en ENSET-M.   Cette application va  vous  offrir un espace    d'echange des articles   entre vous      (les utilisateurs de l'application) , si   vous  avez      un  article et    vous   voulez la   donnée à   quelqu'un donc avec cette   application vous pouvez trouvez facilement la personne,  et si vous avez besoin d'un   article alors vous pouver poster ici votre demande ici."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

</FrameLayout>