<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/main_demande_liste"
        android:layout_width="388dp"
        android:layout_height="555dp"
        android:layout_margin="15dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="120dp"
                android:text="Publié le : "
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/description_demande"
                app:layout_constraintStart_toEndOf="@+id/profile_user_adapter_demande" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/grayLightLine"

                app:layout_constraintBottom_toTopOf="@+id/imageViewDemande"
                app:layout_constraintTop_toTopOf="@+id/profile_user_adapter_demande"
                app:layout_constraintVertical_bias="0.488"
                tools:layout_editor_absoluteX="11dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="57dp"
                android:layout_height="18dp"
                android:layout_marginTop="76dp"
                android:text="Unité(s)"
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/imageViewDemande"
                app:layout_constraintHorizontal_bias="0.238"
                app:layout_constraintStart_toEndOf="@id/piece_demande"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_user_adapter_demande"
                android:layout_width="86dp"
                android:layout_height="69dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="76dp"
                android:text="A "
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/demande_ville"
                app:layout_constraintHorizontal_bias="0.894"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_demande"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="UserName"
                android:textColor="@color/espaceContact"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/profile_user_adapter_demande"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_demande"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/profile_user_adapter_demande"
                app:layout_constraintTop_toBottomOf="@+id/user_demande" />


            <ImageView
                android:id="@+id/imageViewDemande"
                android:layout_width="0dp"
                android:layout_height="204dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_demande"
                app:layout_constraintVertical_bias="0.113" />

            <Button
                android:id="@+id/cantactDemande"
                android:layout_width="326dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_bg"

                android:text="Contacter"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewDemande" />

            <TextView
                android:id="@+id/description_demande"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titre_demande" />

            <TextView
                android:id="@+id/titre_demande"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="100dp"
                android:text="TextView"
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/profile_user_adapter_demande"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.366"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_demande"
                app:layout_constraintVertical_bias="0.027" />

            <TextView
                android:id="@+id/piece_demande"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="8dp"
                android:text="np"
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4" />

            <TextView
                android:id="@+id/demande_categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/demande_ville"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/ecriture"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_demande" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>